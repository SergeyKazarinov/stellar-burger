{
  "extends": [
    "react-app",
    "react-app/jest"
  ],
  "plugins": [
    "react",
    "prettier"
],
  "rules": {
    "no-console": "warn",
    "quotes": ["error", "single"],
    "indent": ["error", 2],
    "comma-dangle": ["error", "always-multiline"],
    "semi": ["error", "always"],
    "import/order": [
      "error",
      {
        "groups": ["builtin", "external", "internal", "parent", "sibling", "index", "object", "type"],
        "newlines-between": "always-and-inside-groups",
        "alphabetize": {
          "order": "asc"
        }
      }
    ],
    "max-len": ["warn", { "code": 100 }]
  }
}